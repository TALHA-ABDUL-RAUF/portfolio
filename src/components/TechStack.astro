---

const currentSkills = [
  { name: 'Python Intermediate', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/python/python-original.svg' },
  
  { name: 'Basic ML Algorithms', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/scikitlearn/scikitlearn-original.svg' },
  { name: 'Matplotlib & Seaborn', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/matlab/matlab-original.svg' },

  { name: 'Numpy & Pandas', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/numpy/numpy-original.svg' },
  
  { name: 'JSON Handling, CSV, Excel ', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/json/json-original.svg' }
];

const learningSkills = [
    { name: 'Math for Machine Learning', icon:'/icons/math.svg' },

  { name: 'FastAPIs & Data Access', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/fastapi/fastapi-original.svg' },
  { name: 'SQL & Databases ', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/azuresqldatabase/azuresqldatabase-original.svg' },
  { name: 'Exploratory Data Analysis (EDA)', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/python/python-original.svg' },
  { name: 'Coding Fluency', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/vscode/vscode-plain.svg' },
  { name: 'Big Data Tools(Spark/Hadoop/Airflow/Spark/Storm)', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/apacheairflow/apacheairflow-original.svg' }


];

const futureSkills = [
  { name: 'Model Evaluation', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/unifiedmodelinglanguage/unifiedmodelinglanguage-original.svg' },
  
  { name: 'Deep Learning Architectures | CNNs |Transformers(NLP, state-of-the-art) ', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/pytorch/pytorch-original.svg' },
  { name: 'Neural Networks basics', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/tensorflow/tensorflow-original.svg' },
  
  { name: 'Applied AI domains', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon/icons/docker/docker-original.svg' },

  { name: 'Cloud Platforms (AWS/GCP/Azure)', icon: 'https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/googlecloud/googlecloud-original.svg' }
];
---

<section id="techstack" class="py-20 bg-gradient-to-b from-black via-gray-900 to-black text-center px-6 relative overflow-hidden">
  <!-- Animated background particles -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute w-1 h-1 bg-cyan-500 rounded-full animate-pulse" style="top: 20%; left: 10%; animation-delay: 0s;"></div>
    <div class="absolute w-1.5 h-1.5 bg-orange-500 rounded-full animate-pulse" style="top: 60%; left: 80%; animation-delay: 2s;"></div>
    <div class="absolute w-2 h-2 bg-purple-500 rounded-full animate-pulse" style="top: 40%; left: 50%; animation-delay: 4s;"></div>
  </div>

  <div class="flex items-center justify-center bg-black relative z-10 py-16">
  <div class="relative group px-10 py-8 rounded-xl overflow-hidden">

    <!-- Cyber Circuit Border -->
    <div class="absolute inset-0 rounded-xl pointer-events-none">
      <!-- Segments -->
      <div class="cyber-segment top left delay-0"></div>
      <div class="cyber-segment top center delay-1"></div>
      <div class="cyber-segment top right delay-2"></div>
      <div class="cyber-segment right middle delay-3"></div>
      <div class="cyber-segment bottom right delay-4"></div>
      <div class="cyber-segment bottom center delay-5"></div>
      <div class="cyber-segment bottom left delay-6"></div>
      <div class="cyber-segment left middle delay-7"></div>

      <!-- Spark Electrons -->
      <span class="spark spark-1"></span>
      <span class="spark spark-2"></span>
      <span class="spark spark-3"></span>
    </div>

    <!-- Shockwave Ripples -->
    <div class="absolute inset-0 pointer-events-none z-30">
      <span class="shockwave tl"></span>
      <span class="shockwave tr"></span>
      <span class="shockwave bl"></span>
      <span class="shockwave br"></span>
    </div>

    <!-- Neural Flares -->
    <div class="absolute inset-0 pointer-events-none z-10">
      <span class="flare" style="top:20%; left:30%"></span>
      <span class="flare" style="top:70%; left:50%"></span>
      <span class="flare" style="top:40%; left:80%"></span>
      <span class="flare" style="top:60%; left:15%"></span>
    </div>

    <!-- Aurora Veil -->
    <div class="absolute inset-0 bg-[conic-gradient(from_0deg,#00f5ff20,#a855f720,#ff008020,#00f5ff20)] animate-aurora opacity-40 mix-blend-screen"></div>

    <!-- Data Dust -->
    <div class="absolute inset-0 pointer-events-none z-20">
      <span class="dust"></span>
      <span class="dust"></span>
      <span class="dust"></span>
      <span class="dust"></span>
      <span class="dust"></span>
    </div>

    <!-- Title -->
    <h2 class="relative text-5xl md:text-6xl font-extrabold tracking-wide prism-text z-40">
      My Tech Stack
    </h2>
  </div>
</div>

<style>
  /* Prism Text */
  .prism-text {
    background: linear-gradient(90deg,#00f5ff,#a855f7,#ff0080,#00f5ff);
    background-size: 300% 100%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: prismMove 6s linear infinite;
    text-shadow: 0 0 25px rgba(0,245,255,0.7), 0 0 40px rgba(168,85,247,0.5);
  }
  @keyframes prismMove {
    0% { background-position: 0% 50%; }
    100% { background-position: 200% 50%; }
  }

  /* Border Segments */
  .cyber-segment { position:absolute; background:linear-gradient(90deg,#00f5ff,#a855f7,#ff0080); opacity:0; animation:pulse 4s linear infinite; border-radius:2px; }
  .top.left{top:0;left:0;width:20%;height:3px;} .top.center{top:0;left:40%;width:20%;height:3px;} .top.right{top:0;right:0;width:20%;height:3px;}
  .right.middle{top:40%;right:0;width:3px;height:20%;} .bottom.right{bottom:0;right:0;width:20%;height:3px;} .bottom.center{bottom:0;left:40%;width:20%;height:3px;}
  .bottom.left{bottom:0;left:0;width:20%;height:3px;} .left.middle{top:40%;left:0;width:3px;height:20%;}
  @keyframes pulse {0%,100%{opacity:0;}10%{opacity:1;}50%{opacity:0.6;}}
  .delay-0{animation-delay:0s;} .delay-1{animation-delay:0.3s;} .delay-2{animation-delay:0.6s;} .delay-3{animation-delay:0.9s;} .delay-4{animation-delay:1.2s;} .delay-5{animation-delay:1.5s;} .delay-6{animation-delay:1.8s;} .delay-7{animation-delay:2.1s;}

  /* Sparks */
  .spark{position:absolute;width:6px;height:6px;background:white;border-radius:50%;box-shadow:0 0 10px #00f5ff,0 0 15px #ff00ff;animation:travel 6s linear infinite;}
  .spark-1{animation-delay:0s;} .spark-2{animation-delay:2s;} .spark-3{animation-delay:4s;}
  @keyframes travel{
    0%{top:0;left:0;}12%{top:0;left:50%;}25%{top:0;left:100%;}
    37%{top:50%;left:100%;}50%{top:100%;left:100%;}
    62%{top:100%;left:50%;}75%{top:100%;left:0;}
    87%{top:50%;left:0;}100%{top:0;left:0;}
  }

  /* Shockwave Ripples */
  .shockwave{position:absolute;width:12px;height:12px;border:2px solid #00f5ff;border-radius:50%;opacity:0;animation:shock 6s infinite;}
  .tl{top:0;left:0;animation-delay:0s;} .tr{top:0;right:0;animation-delay:2s;}
  .bl{bottom:0;left:0;animation-delay:4s;} .br{bottom:0;right:0;animation-delay:6s;}
  @keyframes shock{0%{transform:scale(0);opacity:0.7;}70%{opacity:0;}100%{transform:scale(6);opacity:0;}}

  /* Neural Flares */
  .flare{position:absolute;width:8px;height:8px;background:#00f5ff;border-radius:50%;box-shadow:0 0 10px #00f5ff,0 0 20px #ff00ff;animation:flarePulse 4s ease-in-out infinite;}
  @keyframes flarePulse{0%,100%{transform:scale(0.5);opacity:0;}40%,60%{transform:scale(1.5);opacity:1;}}

  /* Aurora Veil */
  .animate-aurora{animation:auroraShift 12s linear infinite;}
  @keyframes auroraShift{0%{transform:rotate(0deg);}100%{transform:rotate(360deg);}}

  /* Data Dust */
  .dust{position:absolute;width:2px;height:2px;background:#fff;border-radius:50%;opacity:0.4;animation:drift 10s ease-in-out infinite;}
  .dust:nth-child(1){top:20%;left:20%;animation-delay:0s;}
  .dust:nth-child(2){top:50%;left:70%;animation-delay:2s;}
  .dust:nth-child(3){top:80%;left:40%;animation-delay:4s;}
  .dust:nth-child(4){top:35%;left:85%;animation-delay:6s;}
  .dust:nth-child(5){top:65%;left:15%;animation-delay:8s;}
  @keyframes drift{0%,100%{transform:translateY(0) scale(1);}50%{transform:translateY(-15px) scale(1.3);opacity:0.8;}}
</style>


  <div class="max-w-6xl mx-auto grid md:grid-cols-3 gap-8 items-start relative z-10 mt-12">
    {/** Current Skills */}
    <div class="group relative rounded-3xl p-[2px] bg-gradient-to-br from-cyan-500 via-blue-500 to-cyan-700 hover:from-cyan-400 hover:via-blue-400 hover:to-cyan-600 transition-all duration-700 animate-float">
      <div class="absolute -inset-2 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-3xl blur-lg opacity-30 group-hover:opacity-50 transition-opacity duration-500"></div>
      <div class="bg-gray-900/95 rounded-3xl p-6 flex flex-col gap-4 hover:scale-105 hover:shadow-[0_0_30px_rgba(6,182,212,0.3)] transition-all duration-500 relative z-10 backdrop-blur-sm">
        <h3 class="text-xl font-bold text-cyan-400 mb-4 group-hover:text-cyan-300 transition-colors duration-300">Current Skills</h3>
        <div class="flex flex-wrap gap-3 justify-center">
          {currentSkills.map(skill => (
            <div class="flex items-center gap-2 bg-gradient-to-r from-cyan-500/20 to-blue-500/20 rounded-xl px-4 py-2 shadow-[0_0_15px_rgba(6,182,212,0.3)] hover:shadow-[0_0_25px_rgba(6,182,212,0.5)] hover:scale-105 transition-all duration-300 group/skill">
              <img src={skill.icon} alt={skill.name} class="w-6 h-6 group-hover/skill:scale-110 transition-transform duration-300"/>
              <span class="text-white font-medium text-sm group-hover/skill:text-cyan-300 transition-colors duration-300">{skill.name}</span>
            </div>
          ))}
        </div>
      </div>
    </div>

    {/** Learning Skills */}
    <div class="group relative rounded-3xl p-[2px] bg-gradient-to-br from-orange-500 via-amber-500 to-orange-700 hover:from-orange-400 hover:via-amber-400 hover:to-orange-600 transition-all duration-700 animate-float" style="animation-delay: 2s">
      <div class="absolute -inset-2 bg-gradient-to-r from-orange-500 to-amber-500 rounded-3xl blur-lg opacity-30 group-hover:opacity-50 transition-opacity duration-500"></div>
      <div class="bg-gray-900/95 rounded-3xl p-6 flex flex-col gap-4 hover:scale-105 hover:shadow-[0_0_30px_rgba(249,115,22,0.3)] transition-all duration-500 relative z-10 backdrop-blur-sm">
        <h3 class="text-xl font-bold text-orange-400 mb-4 group-hover:text-orange-300 transition-colors duration-300">Learning / Eager to Learn</h3>
        <div class="flex flex-wrap gap-3 justify-center">
          {learningSkills.map(skill => (
            <div class="flex items-center gap-2 bg-gradient-to-r from-orange-500/20 to-amber-500/20 rounded-xl px-4 py-2 shadow-[0_0_15px_rgba(249,115,22,0.3)] hover:shadow-[0_0_25px_rgba(249,115,22,0.5)] hover:scale-105 transition-all duration-300 group/skill">
              <img src={skill.icon} alt={skill.name} class="w-6 h-6 group-hover/skill:scale-110 transition-transform duration-300"/>
              <span class="text-white font-medium text-sm group-hover/skill:text-orange-300 transition-colors duration-300">{skill.name}</span>
            </div>
          ))}
        </div>
      </div>
    </div>

    {/** Future Skills */}
    <div class="group relative rounded-3xl p-[2px] bg-gradient-to-br from-purple-500 via-pink-500 to-purple-700 hover:from-purple-400 hover:via-pink-400 hover:to-purple-600 transition-all duration-700 animate-float" style="animation-delay: 4s">
      <div class="absolute -inset-2 bg-gradient-to-r from-purple-500 to-pink-500 rounded-3xl blur-lg opacity-30 group-hover:opacity-50 transition-opacity duration-500"></div>
      <div class="bg-gray-900/95 rounded-3xl p-6 flex flex-col gap-4 hover:scale-105 hover:shadow-[0_0_30px_rgba(168,85,247,0.3)] transition-all duration-500 relative z-10 backdrop-blur-sm">
        <h3 class="text-xl font-bold text-pink-400 mb-4 group-hover:text-pink-300 transition-colors duration-300">Aspirational / Future Skills</h3>
        <div class="flex flex-wrap gap-3 justify-center">
          {futureSkills.map(skill => (
            <div class="flex items-center gap-2 bg-gradient-to-r from-purple-500/20 to-pink-500/20 rounded-xl px-4 py-2 shadow-[0_0_15px_rgba(168,85,247,0.3)] hover:shadow-[0_0_25px_rgba(168,85,247,0.5)] hover:scale-105 transition-all duration-300 group/skill">
              <img src={skill.icon} alt={skill.name} class="w-6 h-6 group-hover/skill:scale-110 transition-transform duration-300"/>
              <span class="text-white font-medium text-sm group-hover/skill:text-pink-300 transition-colors duration-300">{skill.name}</span>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  33% { transform: translateY(-12px) rotate(-1deg); }
  66% { transform: translateY(-8px) rotate(1deg); }
}
.animate-float {
  animation: float 5s ease-in-out infinite;
}
</style>