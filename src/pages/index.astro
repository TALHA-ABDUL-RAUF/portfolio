<style>
  /* Floating cube idle animation */
  @keyframes floatRotate {
    0%   { transform: rotateX(0deg) rotateY(0deg) scale(1); }
    25%  { transform: rotateX(5deg) rotateY(-5deg) scale(1.02); }
    50%  { transform: rotateX(0deg) rotateY(0deg) scale(1); }
    75%  { transform: rotateX(-5deg) rotateY(5deg) scale(1.02); }
    100% { transform: rotateX(0deg) rotateY(0deg) scale(1); }
  }
  .animate-float { animation: floatRotate 6s ease-in-out infinite; }

  .perspective { perspective: 800px; }
  .cube { transform-style: preserve-3d; }
  .group-hover\:rotate-3d { transform: rotateX(15deg) rotateY(15deg) scale(1.07); }

  /* Neural Network Glow */
  .neural-line {
    stroke: rgba(0, 255, 255, 0.35);
    stroke-width: 1.5;
    stroke-dasharray: 40;
    stroke-dashoffset: 40;
    animation: lineFlow 5s linear infinite;
  }
  .neural-line.delay-0 { animation-delay: 0s; }
  .neural-line.delay-1 { animation-delay: 0.8s; }
  .neural-line.delay-2 { animation-delay: 1.6s; }
  .neural-line.delay-3 { animation-delay: 2.4s; }
  .neural-line.delay-4 { animation-delay: 3.2s; }

  .neural-node {
    fill: #00f5ff;
    filter: drop-shadow(0 0 6px #00f5ff);
    animation: nodePulse 5s ease-in-out infinite;
  }

  @keyframes nodePulse {
    0%, 100% { r: 2.5; opacity: 0.5; }
    40%, 60% { r: 4; opacity: 1; }
  }

  @keyframes lineFlow {
    to { stroke-dashoffset: 0; }
  }

  /* Diagonal Energy Sweep */
  @keyframes sweepMove {
    0%   { transform: translate(-150%, -150%) rotate(25deg); opacity: 0.1; }
    50%  { transform: translate(0%, 0%) rotate(25deg); opacity: 0.5; }
    100% { transform: translate(150%, 150%) rotate(25deg); opacity: 0.1; }
  }
  .energy-sweep {
    animation: sweepMove 5s linear infinite;
    background-size: 200% auto;
    pointer-events: none;
    mix-blend-mode: screen;
  }

  /* Particle Aura */
  .particle {
    position: absolute;
    width: 4px; height: 4px;
    background: rgba(0, 245, 255, 0.7);
    border-radius: 50%;
    filter: drop-shadow(0 0 6px #00f5ff);
    animation: floatParticle 8s ease-in-out infinite;
  }
  .particle:nth-child(1) { top: 15%; left: 20%; animation-delay: 0s; }
  .particle:nth-child(2) { top: 30%; left: 70%; animation-delay: 2s; }
  .particle:nth-child(3) { top: 60%; left: 10%; animation-delay: 4s; }
  .particle:nth-child(4) { top: 75%; left: 80%; animation-delay: 1s; }
  .particle:nth-child(5) { top: 45%; left: 50%; animation-delay: 3s; }
  .particle:nth-child(6) { top: 85%; left: 35%; animation-delay: 5s; }

  @keyframes floatParticle {
    0%   { transform: translate(0,0) scale(0.7); opacity: 0.4; }
    50%  { transform: translate(-10px,-15px) scale(1.2); opacity: 1; }
    100% { transform: translate(0,0) scale(0.7); opacity: 0.4; }
  }
  /* Smooth 3D Cube Rotation */
@keyframes cubeSpin {
  0%   { transform: rotateX(0deg) rotateY(0deg); }
  25%  { transform: rotateX(20deg) rotateY(10deg); }
  50%  { transform: rotateX(40deg) rotateY(0deg); }
  75%  { transform: rotateX(20deg) rotateY(-10deg); }
  100% { transform: rotateX(0deg) rotateY(0deg); }
}

/* Apply to the cube */
.cube {
  transform-style: preserve-3d;
  animation: cubeSpin 10s ease-in-out infinite;
}
</style>




