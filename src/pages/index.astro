}

/* ⚡ Futuristic segmented border */
.godmode-btn::before {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 999px;
  padding: 4px;
  background: conic-gradient(
    from 0deg,
    #ff3e3e 0deg 15deg,
    transparent 15deg 30deg,
    #ff7b00 30deg 45deg,
    transparent 45deg 60deg,
    #00ffff 60deg 75deg,
    transparent 75deg 90deg,
    #ff3e3e 90deg 105deg,
    transparent 105deg 120deg,
    #ff7b00 120deg 135deg,
    transparent 135deg 150deg,
    #00ffff 150deg 165deg,
    transparent 165deg 180deg,
    #ff3e3e 180deg 195deg,
    transparent 195deg 210deg,
    #ff7b00 210deg 225deg,
    transparent 225deg 240deg,
    #00ffff 240deg 255deg,
    transparent 255deg 270deg,
    #ff3e3e 270deg 285deg,
    transparent 285deg 300deg,
    #ff7b00 300deg 315deg,
    transparent 315deg 330deg,
    #00ffff 330deg 345deg,
    transparent 345deg 360deg
  );
  animation: borderFlow 4s linear infinite;
  -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  z-index: -1;
}

@keyframes borderFlow {
  to { transform: rotate(360deg); }
}

/* ⚡ Energy sparks inside */
.godmode-btn::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 999px;
  background: radial-gradient(circle, rgba(255,255,255,0.8) 1px, transparent 1px);
  background-size: 14px 14px;
  animation: sparks 5s linear infinite;
  opacity: 0.2;
  z-index: 0;
}

@keyframes sparks {
  0%, 100% { background-position: 0 0; opacity: 0.15; }
  50% { background-position: 60% 60%; opacity: 0.35; }
}

/* ⚡ Glitch text */
.godmode-btn span {
  display: inline-block;
  animation: glitch 4s infinite;
}

@keyframes glitch {
  0%, 100% { text-shadow: 0 0 12px #ff3e3e, 0 0 24px #ff7b00; }
  45% { text-shadow: -2px 0 #ff3e3e, 2px 0 #00ffff; }
  50% { text-shadow: 2px 0 #ff0000, -2px 0 #00ffea; }
  55% { text-shadow: -2px 0 #ff7b00, 2px 0 #00ffff; }
}

/* ⚡ Orbiting neon particles with comet trails */
.orbit {
  position: absolute;
  border-radius: 50%;
  width: 10px;
  height: 10px;
  background: #ff3e3e;
  box-shadow: 0 0 12px #ff3e3e, 0 0 24px #ff7b00;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation: orbit 7s linear infinite;
}

.orbit:nth-child(2) {
  width: 7px;
  height: 7px;
  background: #00ffff;
  box-shadow: 0 0 12px #00ffff, 0 0 24px #007bff;
  animation-duration: 9s;
}

.orbit:nth-child(3) {
  width: 12px;
  height: 12px;
  background: #ff7b00;
  box-shadow: 0 0 15px #ff7b00, 0 0 28px #ff3e3e;
  animation-duration: 11s;
}

@keyframes orbit {
  0%   { transform: rotate(0deg) translateX(130px) rotate(0deg); }
  100% { transform: rotate(360deg) translateX(130px) rotate(-360deg); }
}

/* ⚡ Glowing comet trail */
.orbit::after {
  content: "";
  position: absolute;
  width: 60px;
  height: 2px;
  background: linear-gradient(90deg, rgba(255,255,255,0.6), transparent);
  top: 50%;
  left: -60px;
  transform: translateY(-50%);
  filter: blur(2px);
  animation: trail 1s linear infinite;
}

@keyframes trail {
  from { opacity: 1; width: 60px; }
  to { opacity: 0; width: 0; }
}

/* ⚡ Hologram diagonal scan */
.scan {
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(135deg, transparent 40%, rgba(0,255,255,0.2) 50%, transparent 60%);
  animation: scanMove 5s linear infinite;
  pointer-events: none;
}

@keyframes scanMove {
  from { transform: translateY(-100%); }
  to { transform: translateY(100%); }
}

/* ⚡ Aura cloud breathing */
.aura {
  position: absolute;
  inset: -40px;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255,62,62,0.6), rgba(255,123,0,0.4), rgba(0,255,255,0.25), transparent 70%);
  filter: blur(60px);
  z-index: -2;
